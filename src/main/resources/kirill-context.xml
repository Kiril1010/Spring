<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:component-scan base-package="auto_wiring"/>

    <bean name="addition" class="homeTask.Calculator_25_05.Calculator.Addition">
        <constructor-arg index="0" value="15"/>
        <constructor-arg index="1" value="10"/>
    </bean>

    <bean name="subtraction" class="homeTask.Calculator_25_05.Calculator.Subtraction">
        <constructor-arg index="0" value="55"/>
        <constructor-arg index="1" value="33"/>
    </bean>

    <bean name="multiplication" class="homeTask.Calculator_25_05.Calculator.Multiplication">
        <constructor-arg index="0" value="10"/>
        <constructor-arg index="1" value="5"/>
    </bean>

    <bean name="divison" class="homeTask.Calculator_25_05.Calculator.Division">
        <constructor-arg index="0" value="20"/>
        <constructor-arg index="1" value="5"/>
    </bean>

    <bean name="injectionCollectionCalculator" class="homeTask.Calculator_25_05.Calculator.InjectionCollectionCalculator">
        <property name="integerListKirill">
            <list>
                <value>1</value>
                <value>3</value>
                <value>5</value>
            </list>
        </property>
        <property name="integerMapKirill">
            <map>
                <entry key="key1">
                    <value>7</value>
                </entry>
                <entry key="key2">
                    <value>8</value>
                </entry>
                <entry key="key3">
                    <value>9</value>
                </entry>
            </map>
        </property>
    </bean>

    <!--1) using autowire-->
    <bean name="calculateService" class="homeTask.Calculator_25_05.Calculator.CalculatorService"
          autowire="byType">
    </bean>

